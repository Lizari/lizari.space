{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "Node",
    "target": "es5",
    "sourceMap": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "incremental": true,
  },
  "include": [
    "next-env.d.ts",
    "**/.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
